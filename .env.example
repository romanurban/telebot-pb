# Required: Your Telegram bot token from @BotFather
TELEGRAM_TOKEN=<YOUR_TELEGRAM_BOT_TOKEN>

# Required: Your OpenAI API key
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY>

# Required: Your bot's username (determines which prompts/<bot_name> folder to use)
BOT_USERNAME=my_bot

# Optional: ElevenLabs API key for voice message generation
# If not set, voice generation features will not work
ELEVEN_API_KEY=<YOUR_ELEVEN_API_KEY>

# Optional: ElevenLabs voice ID (default: EZQLe5vG5r2BoTGdGRL7)
ELEVEN_VOICE_ID=EZQLe5vG5r2BoTGdGRL7

# Optional: OpenAI model for agent (default: gpt-5.1)
OPENAI_MODEL=gpt-5.1

# Optional: OpenAI model for image generation (default: gpt-image-1.5)
IMAGE_GEN_MODEL=gpt-image-1.5

# Optional: MCP server port (default: 8888). Used by mcp_server.py.
MCP_PORT=8888

# Optional: MCP server URL (default: http://127.0.0.1:8888/sse). Used by bots.
# MCP_SERVER_URL=http://127.0.0.1:8888/sse

# Optional: Maximum chat history length (default: 20)
MAX_HISTORY=30

# Optional: Messages before history reset, 0 to disable (default: 10)
HISTORY_RESET_MESSAGES=10

# Optional: Minutes of inactivity before nudge (default: 120)
NUDGE_MINUTES=180

# Optional: Comma-separated list of chat IDs where nudge is enabled
# Example: NUDGE_ENABLED_CHATS=-123456789,-987654321
NUDGE_ENABLED_CHATS=

# Optional: Enable the initial morning nudge (10:00-12:00) using first prompt (default: false)
FIRST_NUDGE_ENABLED=false

# Optional: Bot timezone (default: Europe/Riga)
BOT_TIMEZONE=Europe/Riga

# Optional: Active hours for nudges in HH:MM format (default: 10:00 to 21:00)
ACTIVE_START=10:00
ACTIVE_END=21:00

# Optional: Comma-separated times for chat history summarization (default: 12:20,18:20,23:20)
SUMMARY_TIMES=12:20,18:20,23:20
